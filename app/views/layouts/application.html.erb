<!DOCTYPE html>
<html>
  <head>
    <title>Postapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to image_tag('Ruby_On_Rails_Logo.svg.png', width: 150), root_path %>
    <%#= link_to 'На главную', root_path %>
    <%= link_to 'Регистрация', registration_path %>
    <%= link_to 'Вход', sessions_login_path %>
    <%= link_to 'Выйти', sessions_logout_path %>
    <%= current_user.name if current_user %>
    <%= yield %>
  </body>
</html>
